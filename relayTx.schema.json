{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://pisa.watch/schemas/relay-request.json",
    "type": "object",
    "title": "Relay transaction schema",
    "required": ["from", "signature", "data", "deadlineBlockNumber", "gas", "refund", "relayContractAddress", "to"],
    "additionalProperties": false,
    "properties": {
        "from": {
            "$id": "#/properties/from",
            "type": "string"
        },
        "signature": {
            "$id": "#/properties/signature",
            "type": "string"
        },
        "data": {
            "$id": "#/properties/data",
            "type": "string"
        },
        "deadlineBlockNumber": {
            "$id": "#/properties/deadlineBlockNumber",
            "type": "integer",
            "minimum": 0,
            "maximum": 9007199254740991
        },
        "gas": {
            "$id": "#/properties/gas",
            "type": "number",
            "minimum": 0,
            "maximum": 2000000
        },
        "refund": {
            "$id": "#/properties/refund",
            "type": "string"
        },
        "relayContractAddress": {
            "$id": "#/properties/relayContractAddress",
            "type": "string"
        },
        "to": {
            "$id": "#/properties/to",
            "type": "string"
        }
    }
}
